
material cardOverlay
{
    technique
    {
        pass
        {
            scene_blend alpha_blend

            ambient 1 1 1 1
            diffuse 1 1 1 1
            specular 0 0 0 0

            texture_unit
            {
                texture FigurineCard.png  // You should replace this with your sand texture file
                filtering trilinear
                scale 1 1
                colour_op_ex blend_current_alpha source1
            }
        }
    }

}